<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_main"
    android:paddingRight="@dimen/padding_main"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_report"
        android:background="@drawable/shape_ripple_transparent"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/padding_content"
        android:paddingTop="@dimen/padding_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Report"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"/>

    </RelativeLayout>


</LinearLayout>