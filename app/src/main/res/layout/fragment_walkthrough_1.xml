<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/v_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_onboarding_1"
        android:layout_marginBottom="@dimen/interval_medium"
        app:layout_constraintBottom_toTopOf="@id/ll_text_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </ImageView>

    <!--havent set font-->
    <LinearLayout
        android:id="@+id/ll_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="120dp">

        <TextView
            android:id="@+id/tv_walkthrough"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/text_medium"
            android:textColor="@color/text_primary" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>