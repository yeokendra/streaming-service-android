<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_player_controller"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/padding_main"
    android:paddingEnd="@dimen/padding_main"
    android:paddingTop="@dimen/padding_content"
    android:paddingBottom="@dimen/padding_content"
    android:background="#99000000"
    android:layout_gravity="bottom"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/tv_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIVE"
        android:textColor="@color/white"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_toEndOf="@id/tv_live"
        android:layout_toStartOf="@id/ib_fullscreen"
        android:layout_marginStart="@dimen/padding_content"
        android:layout_marginEnd="@dimen/padding_content"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/ib_fullscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fullscreen"
        android:background="@color/transparent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>