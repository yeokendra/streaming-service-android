<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/material_grey_ee">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/vex_orange" />
            <corners android:radius="8dp" />
            <padding
                android:bottom="4dp"
                android:left="12dp"
                android:right="12dp"
                android:top="4dp"></padding>
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/material_black_text_color" />
            <corners android:radius="8dp" />
            <padding
                android:bottom="4dp"
                android:left="12dp"
                android:right="12dp"
                android:top="4dp"></padding>
        </shape>
    </item>
</ripple>